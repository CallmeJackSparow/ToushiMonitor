<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"/>

    <RelativeLayout
        android:id="@+id/mainTotalLayout"
        android:layout_width="1080px"
        android:layout_height="300px">

        <ImageView
            android:id="@+id/titleView"
            android:layout_width="1080px"
            android:layout_height="127px"
            android:background="@drawable/banner"
            android:scaleType="fitCenter"/>

        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_width="478px"
            android:layout_height="234px"
            android:background="@drawable/title"/>

        <TextView
            android:id="@+id/textInfo"
            android:layout_centerHorizontal="true"
            android:layout_width="478px"
            android:layout_height="120px"
            android:text="总人数"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textAlignment="center"
            android:fontFamily="@font/sourcehansans"/>

        <TextView
            android:id="@+id/totalNum"
            android:layout_centerHorizontal="true"
            android:layout_width="478px"
            android:layout_height="120px"
            android:layout_below="@+id/textInfo"
            android:text="20000"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textAlignment="center"
            android:fontFamily="@font/roboto"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/koTitle"
        android:layout_marginTop="100px"
        android:layout_width="820px"
        android:layout_height="159px"
        android:background="@drawable/ko"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="300px"
        android:layout_height="300px"
        android:background="@drawable/logo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/scanVideo"
        android:layout_marginTop="350px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/loading"
        android:visibility="invisible"/>

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:id="@+id/deviceName"
            android:layout_width="600px"
            android:layout_height="300px"
            android:text="颜值机"
            android:textColor="#FFFF"
            android:textSize="60dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/sourcehansans"/>

        <ImageView
            android:layout_width="653px"
            android:layout_height="117px"
            android:layout_marginTop="400px"
            android:layout_centerHorizontal="true"
            android:background="@drawable/banner3"/>

        <TextView
            android:id="@+id/companyView"
            android:layout_width="653px"
            android:layout_height="150px"
            android:layout_marginTop="350px"
            android:layout_centerHorizontal="true"
            android:text="TOUSHI Tech"
            android:textColor="#FFFF"
            android:textSize="40dp"
            android:textAlignment="center"
            android:fontFamily="@font/sourcehansans"/>

        <ImageView
            android:id="@+id/back1"
            android:layout_marginTop="700px"
            android:layout_width="1000px"
            android:layout_height="1000px"
            android:layout_centerHorizontal="true"
            android:background="@drawable/back1"/>

        <ImageView
            android:id="@+id/back2"
            android:layout_marginTop="700px"
            android:layout_width="1000px"
            android:layout_height="1000px"
            android:layout_centerHorizontal="true"
            android:background="@drawable/back2" />

        <ImageView
            android:layout_marginTop="800px"
            android:layout_width="498px"
            android:layout_height="720px"
            android:layout_centerHorizontal="true"
            android:background="@drawable/back3"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="100px"
        android:layout_height="100px"
        android:background="@drawable/settingicon"
        android:layout_marginLeft="900px"
        android:layout_marginTop="150px"
        android:visibility="invisible"/>

</RelativeLayout>