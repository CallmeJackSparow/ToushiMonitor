<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PKActivity">

    <RelativeLayout
        android:id="@+id/mainTotalLayout"
        android:layout_width="1080px"
        android:layout_height="300px">

<!--        <ImageView-->
<!--            android:id="@+id/titleView"-->
<!--            android:layout_width="1080px"-->
<!--            android:layout_height="127px"-->
<!--            android:background="@drawable/banner"-->
<!--            android:scaleType="fitCenter"/>-->

        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_width="478px"
            android:layout_height="234px"
            android:background="@drawable/title"/>

        <TextView
            android:id="@+id/textInfo"
            android:layout_centerHorizontal="true"
            android:layout_width="478px"
            android:layout_height="120px"
            android:text="总人数"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textAlignment="center"
            android:fontFamily="@font/sourcehansans"/>

        <TextView
            android:id="@+id/totalNum"
            android:layout_centerHorizontal="true"
            android:layout_width="478px"
            android:layout_height="120px"
            android:layout_below="@+id/textInfo"
            android:text="20000"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textAlignment="center"
            android:fontFamily="@font/roboto"/>
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="1016px"
        android:layout_height="655px"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/play1round">

        <ImageView
            android:layout_width="240px"
            android:layout_height="242px"
            android:layout_gravity="center"
            android:layout_marginLeft="50px"
            android:layout_marginTop="200px"
            android:background="@drawable/player2head"/>

        <ImageView
            android:id="@+id/player1Face"
            android:layout_width="190px"
            android:layout_height="190px"
            android:layout_gravity="center"
            android:layout_marginLeft="75px"
            android:layout_marginTop="220px"
            android:background="@drawable/circle"/>

        <TextView
            android:id="@+id/player1Score"
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_marginTop="250px"
            android:layout_marginLeft="350px"
            android:text="100"
            android:textSize="100px"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto"/>

        <ImageView
            android:layout_width="300px"
            android:layout_height="175px"
            android:layout_marginTop="250px"
            android:layout_marginLeft="580px"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@drawable/player2">
        </ImageView>
        
        <TextView
            android:id="@+id/player1Feature1"
            android:layout_width="300px"
            android:layout_height="100px"
            android:layout_marginLeft="580px"
            android:layout_marginTop="150px"
            android:text="无"
            android:textSize="50px"
            android:textColor="#000000"
            android:textAlignment="center"
            android:fontFamily="@font/sourcehansans"/>

        <TextView
            android:id="@+id/player1Feature2"
            android:layout_width="300px"
            android:layout_height="100px"
            android:layout_marginLeft="580px"
            android:layout_marginTop="230px"
            android:text="无"
            android:textSize="50px"
            android:textColor="#000000"
            android:textAlignment="center"
            android:fontFamily="@font/sourcehansans"/>

        <TextView
            android:id="@+id/player1Feature3"
            android:layout_width="300px"
            android:layout_height="100px"
            android:layout_marginLeft="580px"
            android:layout_marginTop="310px"
            android:text="无"
            android:textSize="50px"
            android:textColor="#000000"
            android:textAlignment="center"
            android:fontFamily="@font/sourcehansans"/>

    </RelativeLayout>
    
    <ImageView
        android:layout_width="820px"
        android:layout_height="159px"
        android:layout_marginTop="50px"
        android:layout_gravity="center"
        android:background="@drawable/ko"/>
    
    <RelativeLayout
        android:layout_width="1016px"
        android:layout_height="655px"
        android:layout_marginTop="50px"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/player2round">

        <ImageView
            android:layout_width="300px"
            android:layout_height="175px"
            android:layout_marginTop="250px"
            android:layout_marginLeft="100px"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@drawable/player2">
        </ImageView>

        <TextView
            android:id="@+id/player2Feature1"
            android:layout_width="300px"
            android:layout_height="100px"
            android:layout_marginLeft="100px"
            android:layout_marginTop="150px"
            android:text="无"
            android:textSize="50px"
            android:textColor="#000000"
            android:textAlignment="center"
            android:fontFamily="@font/sourcehansans"/>

        <TextView
            android:id="@+id/player2Feature2"
            android:layout_width="300px"
            android:layout_height="100px"
            android:layout_marginLeft="100px"
            android:layout_marginTop="230px"
            android:text="无"
            android:textSize="50px"
            android:textColor="#000000"
            android:textAlignment="center"
            android:fontFamily="@font/sourcehansans"/>

        <TextView
            android:id="@+id/player2Feature3"
            android:layout_width="300px"
            android:layout_height="100px"
            android:layout_marginLeft="100px"
            android:layout_marginTop="310px"
            android:text="无"
            android:textSize="50px"
            android:textColor="#000000"
            android:textAlignment="center"
            android:fontFamily="@font/sourcehansans"/>

        <TextView
            android:id="@+id/player2Score"
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_marginTop="250px"
            android:layout_marginLeft="450px"
            android:text="100"
            android:textSize="100px"
            android:textColor="#000000"
            android:fontFamily="@font/roboto"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_width="240px"
            android:layout_height="242px"
            android:layout_marginLeft="720px"
            android:layout_marginTop="200px"
            android:layout_gravity="center"
            android:background="@drawable/player2head"></ImageView>

        <ImageView
            android:id="@+id/player2Face"
            android:layout_width="190px"
            android:layout_height="190px"
            android:layout_marginLeft="750px"
            android:layout_marginTop="225px"
            android:layout_gravity="center"
            android:background="@drawable/circle"></ImageView>
        
    </RelativeLayout>
</LinearLayout>