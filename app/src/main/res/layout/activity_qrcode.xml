<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF">

    <ImageView
        android:layout_width="865px"
        android:layout_height="1538px"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/qrbackground"/>

    <ImageView
        android:layout_width="983px"
        android:layout_height="1666px"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/qrqiqiu"/>

    <ImageView
        android:id="@+id/qr_image"
        android:layout_width="400px"
        android:layout_height="400px"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/qr_text"
        android:layout_width="708px"
        android:layout_height="92px"
        android:layout_below="@id/qr_image"
        android:layout_centerHorizontal="true"
        android:background="@drawable/qrscan"/>
    
    <ImageView
        android:id="@+id/qr_countdown"
        android:layout_below="@+id/qr_text"
        android:layout_marginTop="50px"
        android:layout_width="370px"
        android:layout_height="78px"
        android:layout_centerHorizontal="true"
        android:background="@drawable/qrcountdown"/>

    <TextView
        android:id="@+id/countdown"
        android:layout_width="150px"
        android:layout_height="100px"
        android:layout_marginTop="-30px"
        android:layout_alignLeft="@+id/qr_countdown"
        android:layout_alignTop="@id/qr_countdown"
        android:text="9"
        android:textSize="50px"
        android:fontFamily="@font/sourcehansans"

        android:textColor="#FFFF"/>

    <ImageView
        android:id="@+id/scoreRectangle"
        android:layout_below="@id/qr_countdown"
        android:layout_marginTop="50px"
        android:layout_width="414px"
        android:layout_height="714px"
        android:background="@drawable/qrrectangle"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/scoreImage"
        android:layout_below="@id/qr_countdown"
        android:layout_marginTop="70px"
        android:layout_width="370px"
        android:layout_height="673px"
        android:layout_centerHorizontal="true" />
    
</RelativeLayout>
