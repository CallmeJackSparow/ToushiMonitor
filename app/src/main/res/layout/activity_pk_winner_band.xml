                android:id="@+id/pkReward3Image"
                android:layout_width="628px"
                android:layout_height="70px"
                android:layout_below="@id/pkReward2Image"
                android:layout_marginTop="50px"
                android:layout_marginLeft="120px"
                android:background="@drawable/rankbar" />
            <ImageView
                android:id="@+id/pkProcessBar3"
                android:layout_width="628px"
                android:layout_height="70px"
                android:layout_below="@id/pkReward2Image"
                android:layout_marginTop="50px"
                android:layout_marginLeft="120px"
                android:background="@drawable/processbar" />
            <TextView
                android:id="@+id/pkRank3Score"
                android:layout_width="100px"
                android:layout_height="80px"
                android:layout_alignTop="@id/pkProcessBar3"
                android:layout_marginTop="-20px"
                android:layout_alignRight="@id/pkProcessBar3"
                android:textColor="#FFFFFF"
                android:text=""
                android:textSize="40px"
                android:fontFamily="@font/sourcehansans"/>

            <ImageView
                android:id="@+id/pkReward3"
                android:layout_width="110px"
                android:layout_height="110px"
                android:layout_below="@id/pkReward2"
                android:layout_marginTop="10px"
                android:layout_marginLeft="50px"
                android:background="@drawable/rankimage"/>
            <ImageView
                android:id="@+id/pkReward3head"
                android:layout_gravity="center"
                android:layout_below="@id/pkReward2"
                android:layout_marginLeft="65px"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_marginTop="20px"
                android:background="@drawable/circle"/>

            <!--排行榜4-->
            <ImageView
                android:id="@+id/pkReward4Image"
                android:layout_width="628px"
                android:layout_height="70px"
                android:layout_below="@id/pkReward3Image"
                android:layout_marginTop="50px"
                android:layout_marginLeft="120px"
                android:background="@drawable/rankbar" />
            <ImageView
                android:id="@+id/pkProcessBar4"
                android:layout_width="628px"
                android:layout_height="70px"
                android:layout_below="@id/pkReward3Image"
                android:layout_marginTop="50px"
                android:layout_marginLeft="120px"
                android:background="@drawable/processbar" />
            <TextView
                android:id="@+id/pkRank4Score"
                android:layout_width="100px"
                android:layout_height="80px"
                android:layout_alignTop="@id/pkProcessBar4"
                android:layout_marginTop="-20px"
                android:layout_alignRight="@id/pkProcessBar4"
                android:textColor="#FFFFFF"
                android:text=""
                android:textSize="40px"
                android:fontFamily="@font/sourcehansans"/>

            <ImageView
                android:id="@+id/pkReward4"
                android:layout_width="110px"
                android:layout_height="110px"
                android:layout_below="@id/pkReward3"
                android:layout_marginTop="10px"
                android:layout_marginLeft="50px"
                android:background="@drawable/rankimage"/>
            <ImageView
                android:id="@+id/pkReward4head"
                android:layout_gravity="center"
                android:layout_below="@id/pkReward3"
                android:layout_marginLeft="65px"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_marginTop="20px"
                android:background="@drawable/circle"/>

            <!--排行榜5-->
            <ImageView
                android:id="@+id/pkReward5Image"
                android:layout_width="628px"
                android:layout_height="70px"
                android:layout_below="@id/pkReward4Image"
                android:layout_marginTop="50px"
                android:layout_marginLeft="120px"
                android:background="@drawable/rankbar" />
            <ImageView
                android:id="@+id/pkProcessBar5"
                android:layout_width="628px"
                android:layout_height="80px"
                android:layout_below="@id/pkReward4Image"
                android:layout_marginTop="50px"
                android:layout_marginLeft="120px"
                android:background="@drawable/processbar" />
            <TextView
                android:id="@+id/pkRank5Score"
                android:layout_width="100px"
                android:layout_height="80px"
                android:layout_alignTop="@id/pkProcessBar5"
                android:layout_marginTop="-20px"
                android:layout_alignRight="@id/pkProcessBar5"
                android:textColor="#FFFFFF"
                android:text=""
                android:textSize="40px"
                android:fontFamily="@font/sourcehansans"/>

            <ImageView
                android:id="@+id/pkReward5"
                android:layout_width="110px"
                android:layout_height="110px"
                android:layout_below="@id/pkReward4"
                android:layout_marginTop="10px"
                android:layout_marginLeft="50px"
                android:background="@drawable/rankimage"/>
            <ImageView
                android:id="@+id/pkReward5head"
                android:layout_gravity="center"
                android:layout_below="@id/pkReward4"
                android:layout_marginLeft="65px"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_marginTop="20px"
                android:background="@drawable/circle"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>