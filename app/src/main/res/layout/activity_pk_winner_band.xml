<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:id="@+id/roundLayout"
        android:layout_width="478px"
        android:layout_height="234px"
        android:layout_centerHorizontal="true"
        android:background="@drawable/title"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pkRoundTitle"
            android:layout_width="478px"
            android:layout_height="120px"
            android:layout_centerHorizontal="true"
            android:text="PK轮次"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:textSize="50px"
            android:fontFamily="@font/sourcehansans"/>

        <TextView
            android:id="@+id/pkRoundNum"
            android:layout_width="478px"
            android:layout_height="100px"
            android:layout_marginTop="0px"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:textSize="50px"
            android:fontFamily="@font/roboto"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pkPopupWindow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="322px">

            <ImageView
                android:layout_marginLeft="200px"
                android:layout_width="48px"
                android:layout_height="322px"
                android:background="@drawable/link_left"/>

            <ImageView
                android:layout_marginLeft="832px"
                android:layout_width="48px"
                android:layout_height="322px"
                android:background="@drawable/link_right"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="826px"
            android:layout_height="1496px"
            android:background="@drawable/popupwindow"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/pkBandBack"
                android:layout_width="560px"
                android:layout_height="120px"
                android:layout_marginTop="20px"
                android:background="@drawable/ranktitle"
                android:layout_marginLeft="135px"/>

            <TextView
                android:layout_width="560px"
                android:layout_height="120px"
                android:layout_marginTop="20px"
                android:text="PK榜"
                android:textColor="#FFFF"
                android:textSize="50px"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/sourcehansans"/>

            <ImageView
                android:id="@+id/pkRostram"
                android:layout_below="@+id/pkBandBack"
                android:layout_marginTop="142px"
                android:layout_width="400px"
                android:layout_height="158px"
                android:background="@drawable/rankbackground"
                android:layout_centerHorizontal="true"/>
            <!--排行榜第1-->
            <ImageView
                android:id="@+id/pkRank1"
                android:layout_below="@+id/pkBandBack"
                android:layout_marginTop="20px"
                android:layout_width="142px"
                android:layout_height="142px"
                android:background="@drawable/rank1"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/pkRank1Image"
                android:layout_below="@+id/pkBandBack"
                android:layout_marginTop="40px"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circle"/>

            <TextView
                android:id="@+id/pkRank1ScoreLabel"
                android:layout_below="@+id/pkBandBack"
                android:layout_marginTop="170px"
                android:layout_width="100px"
                android:layout_height="120px"
                android:layout_marginLeft="375px"
                android:text=""
                android:textSize="55px"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/sourcehansans"/>

            <!--排行榜第2-->
            <ImageView
                android:id="@+id/pkRank2"
                android:layout_below="@+id/pkBandBack"
                android:layout_marginTop="120px"
                android:layout_width="104px"
                android:layout_height="104px"
                android:background="@drawable/rank2"
                android:layout_marginLeft="210px" />

            <ImageView
                android:id="@+id/pkRank2Image"
                android:layout_below="@+id/pkBandBack"
                android:layout_marginTop="130px"
                android:layout_width="85px"
                android:layout_height="85px"
                android:layout_marginLeft="220px"
                android:background="@drawable/circle"/>
            <TextView
                android:id="@+id/pkRank2ScoreLabel"
                android:layout_below="@+id/pkBandBack"
                android:layout_marginTop="200px"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_marginLeft="255px"
                android:text=""
                android:textSize="45px"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/sourcehansans"/>

            <!--排行榜第3-->
            <ImageView
                android:id="@+id/pkRank3"
                android:layout_below="@+id/pkBandBack"
                android:layout_marginTop="150px"
                android:layout_width="82px"
                android:layout_height="82px"
                android:background="@drawable/rank3"
                android:layout_marginLeft="510px" />

            <ImageView
                android:id="@+id/pkRank3Image"
                android:layout_below="@+id/pkBandBack"
                android:layout_marginTop="157px"
                android:layout_width="68px"
                android:layout_height="68px"
                android:layout_marginLeft="518px"
                android:background="@drawable/circle"/>
            <TextView
                android:id="@+id/pkRank3ScoreLabel"
                android:layout_below="@+id/pkBandBack"
                android:layout_marginTop="210px"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_marginLeft="495px"
                android:text=""
                android:textSize="40px"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/sourcehansans"/>

            <!--滚动条1-->
            <ImageView
                android:id="@+id/pkReward1Image"
                android:layout_width="628px"
                android:layout_height="70px"
                android:layout_below="@id/pkRostram"
                android:layout_marginTop="30px"
                android:layout_marginLeft="120px"
                android:background="@drawable/rankbar" />
            <ImageView
                android:id="@+id/pkProcessBar1"
                android:layout_width="628px"
                android:layout_height="70px"
                android:layout_below="@id/pkRostram"
                android:layout_marginTop="30px"
                android:layout_marginLeft="120px"
                android:background="@drawable/processbar" />
            <TextView
                android:id="@+id/pkRank1Score"
                android:layout_width="100px"
                android:layout_height="80px"
                android:layout_alignTop="@id/pkProcessBar1"
                android:layout_marginTop="-20px"
                android:layout_alignRight="@id/pkProcessBar1"
                android:textColor="#FFFFFF"
                android:text=""
                android:textSize="40px"
                android:fontFamily="@font/sourcehansans"/>

            <ImageView
                android:id="@+id/pkReward1"
                android:layout_width="110px"
                android:layout_height="110px"
                android:layout_below="@id/pkRostram"
                android:layout_marginTop="10px"
                android:layout_marginLeft="50px"
                android:background="@drawable/rankimage"/>
            <ImageView
                android:id="@+id/pkReward1head"
                android:layout_gravity="center"
                android:layout_below="@id/pkRostram"
                android:layout_marginLeft="65px"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_marginTop="20px"
                android:background="@drawable/circle"/>

            <!--滚动条2-->
            <ImageView
                android:id="@+id/pkReward2Image"
                android:layout_width="628px"
                android:layout_height="70px"
                android:layout_below="@id/pkReward1Image"
                android:layout_marginTop= "50px"
                android:layout_marginLeft="120px"
                android:background="@drawable/rankbar" />
            <ImageView
                android:id="@+id/pkProcessBar2"
                android:layout_width="628px"
                android:layout_height="70px"
                android:layout_below="@id/pkReward1Image"
                android:layout_marginTop="50px"
                android:layout_marginLeft="120px"
